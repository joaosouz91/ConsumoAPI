<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchActivity">

    <EditText
            android:layout_width="341dp"
            android:layout_height="43dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/inputNumeroPokemon"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:hint="@string/hint_input_pokemon_name"/>
    <Button
            android:text="@string/button_search_pokemon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btSearch" app:layout_constraintStart_toStartOf="@+id/inputNumeroPokemon"
            app:layout_constraintEnd_toEndOf="@+id/inputNumeroPokemon" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputNumeroPokemon" android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/ivPokemon" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btSearch" app:layout_constraintStart_toStartOf="@+id/btSearch"
            app:layout_constraintEnd_toEndOf="@+id/btSearch"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPokemon" app:layout_constraintStart_toStartOf="@+id/ivPokemon"
            app:layout_constraintEnd_toEndOf="@+id/ivPokemon" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivPokemon"/>
</android.support.constraint.ConstraintLayout>